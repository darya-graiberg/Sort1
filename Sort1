public class BubbleSort {
    public static void bubbleSort(int[] arr) {
        int n = arr.length;
        for (int i = 0; i < n-1; i++) {
            for (int j = 0; j < n-i-1; j++) {
                if (arr[j] > arr[j+1]) {
                    // меняем элементы местами
                    int temp = arr[j];
                    arr[j] = arr[j+1];
                    arr[j+1] = temp;
                }
            }
        }
    }
}

    public static void main(String[] args) {
        // Для небольшого массива
        int[] smallArr = {64, 34, 25, 12, 22, 11, 90};
        System.out.println("Заданный массив:");
        long startTime = System.currentTimeMillis();
        bubbleSort(smallArr);
        long endTime = System.currentTimeMillis();
        System.out.println("Время выполнения для небольшого массива: " + (endTime - startTime) + " миллисекунд");
        System.out.println("Отсортированный массив:");
        for (int i = 0; i < arr.length; i++) {
            System.out.print(arr[i] + " ");
        }
        // Для крупного массива
        int[] largeArr = new int[10000];
        for (int i = 0; i < largeArr.length; i++) {
            largeArr[i] = (int) (Math.random() * 100);
        }
        startTime = System.currentTimeMillis();
        bubbleSort(largeArr);
        endTime = System.currentTimeMillis();
        System.out.println("Время выполнения для крупного массива: " + (endTime - startTime) + " миллисекунд");
}
